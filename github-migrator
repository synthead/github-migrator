#!/usr/bin/env ruby

require 'bundler/setup'
Bundler.require(:default)

require './github_issue'
require './issue_sources/bitbucket_issue'

config = YAML.load_file('config.yml')

github_issue = GithubIssue.new(config['github'])
bitbucket_issue = BitbucketIssue.new(config['bitbucket'])

bitbucket_issue.all.each { |i| github_issue.create(i) }
